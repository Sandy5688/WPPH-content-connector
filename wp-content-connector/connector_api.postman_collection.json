{
  "info": {
    "name": "WP Content Connector API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Ping",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/wp-json/connector/v1/ping"
        }
      }
    },
    {
      "name": "Ingest",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{apiKey}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"api_key\": \"YOUR_TEST_KEY_12345\",\n  \"title\": \"Sample Post Title\",\n  \"description\": \"This is a sample description for testing purposes.\",\n  \"tags\": [\n    \"news\",\n    \"update\",\n    \"sample\"\n  ],\n  \"category\": \"Announcements\",\n  \"media_url\": \"https://example.com/media/sample-video.mp4\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wp-json/connector/v1/ingest"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost/mywordpress"
    },
    {
      "key": "apiKey",
      "value": "YOUR_TEST_KEY_12345"
    }
  ]
}