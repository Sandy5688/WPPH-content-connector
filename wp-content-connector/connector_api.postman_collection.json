{
  "info": {
    "name": "WP Content Connector API",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Collection to test WP Content Connector plugin",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Ping",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/wp-json/connector/v1/ping"
      }
    },
    {
      "name": "Ingest",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{apiKey}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample Post Title\",\n  \"description\": \"This is a sample description\",\n  \"tags\": [\"news\", \"update\"],\n  \"category\": \"Announcements\",\n  \"media_url\": \"https://example.com/media/sample.mp4\"\n}"
        },
        "url": "{{baseUrl}}/wp-json/connector/v1/ingest"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost" },
    { "key": "apiKey", "value": "your_api_key" }
  ]
}
